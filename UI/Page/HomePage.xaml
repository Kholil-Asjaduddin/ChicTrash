<Page x:Class="ChicTrash.UI.Page.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ChicTrash.UI.Page"
      xmlns:component="clr-namespace:ChicTrash.UI.Component"
      mc:Ignorable="d"
      Title="HomePage" Height="1080" Width="1720">
        
        <ScrollViewer>
        <StackPanel>
        <component:ProfileBalanceCard Width="878" Height="200">
            <component:ProfileBalanceCard.RenderTransform>
                <TranslateTransform X="-150"></TranslateTransform>
            </component:ProfileBalanceCard.RenderTransform>
        </component:ProfileBalanceCard>
        
        <TextBlock Grid.Row="1" Text="What’s For Sale" FontSize="24" FontWeight="Bold" Margin="10" >
            <TextBlock.RenderTransform>
                <TranslateTransform X="275" Y="15"></TranslateTransform>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Separator Grid.Row="2" Margin="0,5" Width="878" Height="5" Background="Gray" BorderBrush="Gray">
            <Separator.RenderTransform>
                <TranslateTransform X="-135" ></TranslateTransform>
            </Separator.RenderTransform>
        </Separator>
        
        <!-- Card Layout -->
        
            
            <WrapPanel  Grid.Row="2" ItemWidth="150" Width="960" Height="500">
                <WrapPanel.RenderTransform>
                    <TranslateTransform X="-110" ></TranslateTransform>
                </WrapPanel.RenderTransform>
                <!-- Example cards with Margin for spacing -->
                <component:ItemCard Margin="10" />
                <component:ItemCard Margin="10" />
                <component:ItemCard Margin="10" />
                <component:ItemCard Margin="10" />
                <component:ItemCard Margin="10" />
                <component:ItemCard Margin="10" />
                <!-- Add more cards as needed -->
            </WrapPanel>

        <TextBlock Grid.Row="2" FontSize="24" FontWeight="Bold" Margin="10" >
            <TextBlock.RenderTransform>
                <TranslateTransform X="265" Y="-290"></TranslateTransform>
            </TextBlock.RenderTransform>
            Article
        </TextBlock>
        <Separator Margin="0,5" Width="878" Height="5" Background="Gray" BorderBrush="Gray">
            <Separator.RenderTransform>
                <TranslateTransform X="-140" Y="-300"></TranslateTransform>
            </Separator.RenderTransform>
            </Separator>
        
            <WrapPanel Grid.Row="2" ItemWidth="900" Width="960" ItemHeight="300" Height="500">
                <WrapPanel.RenderTransform>
                    <TranslateTransform X="-90" ></TranslateTransform>
                </WrapPanel.RenderTransform>
                <!-- Example cards with Margin for spacing -->
                <component:ItemCard Height="400" Margin="-10,-475,0,0">
                  
                </component:ItemCard>
               
                <!-- Add more cards as needed -->
            </WrapPanel>
    </StackPanel>
    </ScrollViewer>
</Page>
