<UserControl x:Class="ChicTrash.UI.Component.RoundedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ChicTrash.UI.Component"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border CornerRadius="20" 
            BorderBrush="#FFB0B0B0" 
            BorderThickness="1" 
            Background="White">
        <TextBox Width="{Binding Width, ElementName=RoundedTextBoxControl}" 
                 Height="{Binding Height, ElementName=RoundedTextBoxControl}" 
                 Margin="0" 
                 Padding="10" 
                 Background="Transparent" 
                 BorderThickness="0" 
                 Text="{Binding Text, ElementName=RoundedTextBoxControl, Mode=TwoWay}" 
                 />
    </Border>
</UserControl>
