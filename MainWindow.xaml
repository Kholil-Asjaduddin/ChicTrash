<Window x:Class="ChicTrash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="720" Width="1080" Background='#3C5B6F' >
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="299*"/>
        </Grid.ColumnDefinitions>
        <!-- Logo -->

        <Border Background="#EEEEEE" Margin="49,107,564,164" RenderTransformOrigin="0.5,0.5" CornerRadius="10" Grid.ColumnSpan="2">
            <Grid Margin="10,10,0,10" HorizontalAlignment="Left" Width="338">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="720*"/>
                    <ColumnDefinition Width="189*"/>
                </Grid.ColumnDefinitions>
                <!-- Logo (optional) -->
                <!-- If you want to add a logo, place it here -->


                <!-- Email -->
                <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,82,0,0" Height="28"/>
                <TextBox x:Name="emailInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="238" Margin="20,114,0,0" Height="27"/>

                <!-- Password -->
                <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,152,0,0" Height="28"/>
                <PasswordBox x:Name="passwordInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="238" Margin="20,180,0,0" Height="23"/>
                <!-- Submit Button -->

                <Button Height="30" Content="LOGIN" Margin="25,241,134,148" RenderTransformOrigin="0.462,-0.163">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="LightBlue" CornerRadius="10"  BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btnRegister" Click ="btnRegister_Click" Height="30" Content="Register" Margin="156,241,10,148" RenderTransformOrigin="0.462,-0.163">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="LightBlue" CornerRadius="10"  BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        <Image x:Name="ICON" Grid.Column="1" HorizontalAlignment="Left" Height="209" Margin="498,222,0,0" VerticalAlignment="Top" Width="244" Source="/shopping-cart-svgrepo-com 3.png" RenderTransformOrigin="0.27,0.689"/>
        <TextBlock HorizontalAlignment="Left" Height="196" Margin="49,40,0,0" TextWrapping="Wrap" Text="Welcome To ChicTrash" VerticalAlignment="Top" Width="505" FontFamily="Cooper Black" Grid.ColumnSpan="2" Foreground="#FFFDFDFD" FontSize="40"/>

    </Grid>
</Window>
